{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Datascript (JSON)",
  "scopeName": "source.ds-json",
  "patterns": [
    {
      "include": "#value"
    }
  ],
  "repository": {
    "string": {
      "patterns": [
        {
          "name": "string.quoted.double",
          "match": "\"(.*?)\"",
          "captures": {
            "1": {
              "name": "string.quoted.double"
            }
          }
        }
      ]
    },
    "number": {
      "name": "constant.numeric.json",
      "match": "-?(?:0|[1-9]\\d*)(?:\\.\\d+)?(?:[eE][+-]?\\d+)?"
    },
    "object": {
      "begin": "{",
      "end": "}",
      "name": "meta.structure.dictionary.json",
      "patterns": [
        {
          "include": "#kv-entry"
        }
      ]
    },
    "kv-entry": {
      "begin": "\"(\\w+)\"\\s*(:)",
      "beginCaptures": {
        "1": { "name": "variable.name" }
      },
      "patterns": [
        {
          "include": "#value"
        }
      ],
      "end": ","
    },
    "array": {
      "begin": "\\[",
      "end": "\\]",
      "name": "meta.structure.array.json",
      "patterns": [
        {
          "include": "#value"
        }
      ]
    },
    "instruction": {
      "begin": "\\[(?:(\"(\\(\\)|if|unless|elif|elun|else|for|while|until|async|meanwhile|not|or|and|add|sub|wait)\")|(\".+?\"))",
      "beginCaptures": {
        "1": {
          "name": "keyword.control"
        },
        "2": {
          "name": "keyword.control"
        },
        "3": {
          "name": "entity.name.function"
        }
      },
      "patterns": [{ "include": "#value" }],
      "end": "]"
    },
    "boolean": {
      "name": "constant.language.boolean.json",
      "match": "\\b(true|false)\\b"
    },
    "null": {
      "name": "constant.language.null.json",
      "match": "\\bnull\\b"
    },
    "value": {
      "patterns": [
        {
          "include": "#string"
        },
        {
          "include": "#number"
        },
        {
          "include": "#object"
        },
        {
          "include": "#instruction"
        },
        {
          "include": "#array"
        },
        {
          "include": "#boolean"
        },
        {
          "include": "#null"
        }
      ]
    }
  }
}
